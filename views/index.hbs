
{{#if started}}

  <div class="mainText">
    <h1>{{config.mainTitle}}</h1>
    <p>{{config.mainText}}</p>
  </div>

  {{> clock}}

  <div id="mycontent">
    <div id="retry" style="display:none;">{{config.feedback}}</div>
    <form id="myform" method="POST" action="/check">
      {{!-- <label for="">Clave:</label> --}}
      <input id="mykey" type="text" name="key" placeholder="{{config.placeholder1}}"/>
      {{!-- <label for="">CÃ³digo:</label> --}}
      <input id="mycode" type="text" name="code" placeholder="{{config.placeholder2}}"/>
      <button class="sendBtn" type="submit">{{config.btnSend}}</button>
    </form>
  </div>
  <div id="myprize" style="display:none;">{{config.win}}</div>

  <button id="mytest" type="button" style="visibility:hidden;">Get Code</button>

{{else}}

  <div class="mainText centered neoned">
    <h1>{{config.mainTitle_noStarted}}</h1>
  </div>

{{/if}}
